rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Public read-only access to open jobs
    match /jobPublic/{jobId} {
      allow read: if true;
      allow write: if false;
    }

    // Logged-in users can create applications
    match /applications/{applicationId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }

    // Anyone can join the waitlist
    match /waitlist/{waitlistId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    match /referrals/{refCode} {
        allow read, write: if isAdmin();
    }
    
    match /events/{eventId} {
        allow read, write: if isAdmin();
    }

    // Admins can manage jobs and applicants
    match /jobs/{jobId} {
      allow read, write: if isAdmin();
    }

    match /applicants/{applicantId} {
      allow read, write: if isAdmin();
    }

    match /admins/{adminId} {
      allow read, write: if isAdmin(); // Or a more restrictive owner role
    }
  }
}
