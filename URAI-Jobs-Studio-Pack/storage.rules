rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() { return request.auth != null && request.auth.token.admin == true; }
    // Resumes use signed URLs for upload; public reads/writes disabled.
    match /resumes/{fileName} {
      allow read, write: if isAdmin();
    }
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}
