rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Resumes are private; only admins can read them.
    // Uploads are handled via a callable function returning a signed URL.
    match /resumes/{applicantId}/{applicationId}/{filename} {
      allow read: if request.auth != null && get(/databases/(default)/documents/admins/$(request.auth.uid)) != null;
      allow write: if false; // Writes are only allowed via signed URLs
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
