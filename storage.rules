rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Admins can read any file
    function isAdmin() {
      return exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    match /resumes/{applicantId}/{applicationId}/{filename} {
      // Admins can read any resume
      allow read: if isAdmin();
      
      // Allow write only for the specific user and application, 
      // and only with a valid token.
      // This requires the client to get a token from a callable function.
      allow write: if request.auth != null &&
                   request.auth.uid == applicantId &&
                   request.resource.size < 10 * 1024 * 1024 &&
                   request.resource.contentType.matches('application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document');
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
