rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all access.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Resumes are stored at resumes/{applicantId}/{applicationId}/{filename}
    // Only authenticated admins can read resumes.
    // Writes are handled exclusively via a short-lived signed URL generated
    // by the createResumeUpload callable function, so direct writes are denied.
    match /resumes/{applicantId}/{applicationId}/{filename} {
      allow read: if request.auth != null &&
                     exists(/databases/(default)/documents/admins/$(request.auth.uid));
      allow write: if false;
    }
  }
}
