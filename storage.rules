
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Resumes: Only allow authenticated users to upload with a valid token,
    // and only admins to read.
    match /resumes/{applicantId}/{applicationId}/{fileName} {
      // Upload validation
      allow write: if request.auth != null &&
                      request.resource.size < 10 * 1024 * 1024 && // 10 MB
                      request.resource.contentType.matches('application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document') &&
                      exists(/databases/(default)/documents/uploadTokens/$(request.resource.metadata.firebaseStorageDownloadTokens));


      // Read validation for admins
      allow read: if request.auth != null &&
                   exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
  }
}
