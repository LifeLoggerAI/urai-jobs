rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Resumes are stored at: resumes/{applicantId}/{applicationId}/{filename}
    match /resumes/{applicantId}/{applicationId}/{filename} {
      // Admins can read any resume.
      allow read: if isAdmin();

      // Applicants can write to their own application folder only.
      // This rule is coupled with a callable function that generates an upload token/URL.
      // We verify the upload came from the applicant and has valid metadata.
      allow write: if request.auth != null
                    && request.auth.uid == applicantId
                    && resource.size < 10 * 1024 * 1024 // 10 MB limit
                    && resource.contentType.matches('application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document');
    }

    // Deny all other read/write operations on storage.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
