rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Function to check for admin privileges
    function isAdmin() {
      return exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }

    // Resumes: Private to admins, and only the applicant can upload.
    match /resumes/{applicantId}/{applicationId}/{filename} {
      allow read: if isAdmin();
      allow write: if request.auth != null &&
                    request.auth.uid == applicantId &&
                    request.resource.size < 10 * 1024 * 1024 && // 10 MB limit
                    request.resource.contentType.matches('application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document');
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
