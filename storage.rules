rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Resumes are private and can only be uploaded by the applicant and read by admins.
    match /resumes/{applicantId}/{applicationId}/{filename} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role in ['owner', 'admin', 'reviewer'];
      allow write: if request.auth != null && request.auth.uid == applicantId;
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
