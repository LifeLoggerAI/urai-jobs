rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Resumes: private, only admins can read.
    // Applicants can only write to their own scoped path with specific constraints.
    match /resumes/{applicantId}/{applicationId}/{filename} {
      // Admins can read any resume
      allow read: if isAdmin();

      // Applicants can write (upload) only under specific conditions:
      // 1. The user must be signed in (or we must use a token-based flow).
      //    For simplicity and security, we'll assume an authenticated user for this rule.
      //    The callable function will handle the secure link generation.
      // 2. The applicantId in the path must match the user's UID.
      // 3. File size must be under 10MB.
      // 4. Content type must be one of the allowed types.
      allow write: if request.auth != null &&
                      request.auth.uid == applicantId &&
                      request.resource.size < 10 * 1024 * 1024 &&
                      request.resource.contentType.matches('application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document');
    }

    // Deny all other paths by default for security
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
