rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public job listings (optional)
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if false;
    }

    // Everything else locked down by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
