
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isApplicant(applicantId) {
      return isSignedIn() && request.auth.uid == applicantId;
    }

    function hasOnly(keys) {
      return request.resource.data.keys().hasOnly(keys);
    }

    // Admins: Full access to everything
    match /admins/{uid} {
      allow read, write: if isAdmin();
    }

    // Public job listings
    match /jobPublic/{jobId} {
      allow get: if true;
      allow list: if true;
      allow write: if false;
    }

    // Jobs: Admin-only CRUD
    match /jobs/{jobId} {
      allow read, write: if isAdmin();
    }

    // Applicants: Create-only for public, admin-only for read/update
    match /applicants/{applicantId} {
      allow create: if hasOnly(['primaryEmail', 'name', 'phone', 'links', 'source']) && request.resource.data.primaryEmail == request.resource.data.primaryEmail.lower();
      allow read, update: if isAdmin();
    }

    // Applications: Create-only for public, admin-only for read/update
    match /applications/{applicationId} {
      allow create: if hasOnly(['jobId', 'applicantEmail', 'answers', 'resume']) && request.resource.data.applicantEmail == request.resource.data.applicantEmail.lower();
      allow read, update: if isAdmin();
    }

    // Referrals: Admin-only
    match /referrals/{refCode} {
      allow read, write: if isAdmin();
    }

    // Waitlist: Create-only for public, admin-only for read
    match /waitlist/{entryId} {
      allow create: if hasOnly(['email', 'name', 'interests', 'consent']) && request.resource.data.email == request.resource.data.email.lower();
      allow read: if isAdmin();
    }

    // Events: Create-only for public, admin-only for read
    match /events/{eventId} {
        allow create: if true;
        allow read: if isAdmin();
    }

    // Upload Tokens: Used for resume uploads
    match /uploadTokens/{token} {
      allow read, create: if isSignedIn(); // Further validation in callable function
      allow update, delete: if false;
    }

    // Digests: Admin-only
    match /digests/{digestId} {
      allow read, write: if isAdmin();
    }
  }
}
