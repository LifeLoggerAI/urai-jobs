rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role IN ['admin', 'owner'];
    }

    function isOwner() {
      return isSignedIn() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'owner';
    }

    // Admin routes
    match /admins/{uid} {
      allow read, write: if isOwner();
      allow read: if isAdmin();
    }

    // Public read-only
    match /jobPublic/{jobId} {
      allow get: if true;
      allow list: if true;
      allow write: if false;
    }

    // Jobs - admin only
    match /jobs/{jobId} {
      allow read, write: if isAdmin();
    }

    // Applicants - public write, admin read
    match /applicants/{applicantId} {
      allow create: if true; // further validation in functions
      allow read, update: if isAdmin();
    }

    // Applications - public write, admin read/update
    match /applications/{applicationId} {
      allow create: if true; // further validation in functions
      allow read, update: if isAdmin();
    }

    // Referrals - admin only
    match /referrals/{refCode} {
      allow read, write: if isAdmin();
    }

    // Waitlist - public write, admin read
    match /waitlist/{id} {
      allow create: if true;
      allow read: if isAdmin();
    }

    // Events - public write, admin read
    match /events/{eventId} {
      allow create: if true;
      allow read: if isAdmin();
    }
  }
}
