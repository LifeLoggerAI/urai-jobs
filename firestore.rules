rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    function hasOnly(keys) {
      return request.resource.data.keys().hasOnly(keys);
    }

    // Admins: Only other admins can see who is an admin. Only owners can add/remove admins.
    match /admins/{uid} {
      allow read: if isAdmin();
      allow write: if get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'owner';
    }

    // Jobs: Publicly readable projection, admin-only write.
    match /jobs/{jobId} {
      allow read, write: if isAdmin();
    }

    match /jobPublic/{jobId} {
      allow read: if true;
      allow write: if false; // Managed by Cloud Function
    }

    // Applicants: Write-only for creates, admin-only for reads/updates.
    match /applicants/{applicantId} {
      allow read, update: if isAdmin();
      allow create: if request.resource.data.primaryEmail.toLowerCase() == request.resource.data.primaryEmail; // Enforce lowercase email
    }

    // Applications: Write-only for creates, admin-only for reads/updates.
    match /applications/{applicationId} {
      allow read, update: if isAdmin();
      allow create: if hasOnly(['jobId', 'applicantId', 'applicantEmail', 'answers', 'resume', 'source']) && request.resource.data.applicantEmail.toLowerCase() == request.resource.data.applicantEmail;
    }

    // Referrals: Readable by admins, writable only by admins
    match /referrals/{refCode} {
        allow read, write: if isAdmin();
    }

    // Waitlist: Write-only for creates, admin-only for reads.
    match /waitlist/{id} {
      allow read: if isAdmin();
      allow create: if request.resource.data.email.toLowerCase() == request.resource.data.email;
    }

    // Events: Write-only for creates, admin-only for reads.
    match /events/{eventId} {
      allow read: if isAdmin();
      allow create: if true;
    }

    // Digests: Admin-only read
    match /digests/{digestId} {
        allow read: if isAdmin();
        allow write: if false; // Managed by Cloud Function
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
