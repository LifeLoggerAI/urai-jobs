
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // The server-side functions run with admin privileges, so they bypass these rules.
    // These rules are primarily for client-side security.

    match /jobs/{jobId} {
      // Disallow all client-side access to jobs.
      allow read, write: if false;

      // Rules for the audit_logs subcollection.
      match /audit_logs/{logId} {
        // Disallow all client-side access to audit logs.
        allow read, write: if false;
      }
    }

    match /idempotency_keys/{key} {
        // Disallow all client-side access to idempotency keys.
        allow read, write: if false;
    }
  }
}
