rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    function isReviewer() {
        return isSignedIn() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role in ['admin', 'owner', 'reviewer'];
    }

    function hasOnly(keys) {
        return request.resource.data.keys().hasOnly(keys);
    }

    // Public access to open jobs
    match /jobPublic/{jobId} {
      allow get: if true;
      allow list: if true;
      allow write: if false;
    }

    // Jobs can only be managed by admins
    match /jobs/{jobId} {
      allow read, write: if isAdmin();
    }

    // Applicants can be created by anyone, but only read/updated by admins
    match /applicants/{applicantId} {
      allow create: if hasOnly(['primaryEmail', 'name', 'phone', 'links', 'source', 'createdAt', 'updatedAt', 'lastActivityAt']);
      allow read, update: if isAdmin();
      allow delete: if false;
    }

    // Applications can be created by anyone, but only read/updated by admins
    match /applications/{applicationId} {
        allow create: if request.resource.data.status == 'NEW' && hasOnly(['jobId', 'applicantId', 'applicantEmail', 'status', 'answers', 'resume', 'tags', 'notesCount', 'submittedAt', 'updatedAt']);
        allow read, update: if isReviewer();
        allow delete: if isAdmin();
    }

    // Referrals can only be managed by admins
    match /referrals/{refCode} {
      allow read, write: if isAdmin();
    }

    // Waitlist can be written to by anyone, but only read by admins
    match /waitlist/{id} {
      allow create: if hasOnly(['email', 'name', 'interests', 'consent', 'createdAt']);
      allow read, update, delete: if isAdmin();
    }

    // Admins can only be managed by other admins
    match /admins/{uid} {
      allow read, write: if isAdmin();
    }

    // Events can be created by anyone, but only read by admins
    match /events/{eventId} {
      allow create: if hasOnly(['type', 'entityType', 'entityId', 'metadata', 'createdAt']);
      allow read: if isAdmin();
      allow write: if false;
    }

    // Digests are read-only for admins
    match /digests/{digestId} {
        allow read: if isReviewer();
        allow write: if false;
    }
  }
}
