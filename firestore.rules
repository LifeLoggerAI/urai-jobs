rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }

    // Admins collection: only readable by admins, not writable by clients
    match /admins/{uid} {
      allow read: if isAdmin();
      allow write: if false; // Should be managed server-side or via console
    }

    // Jobs can be created, read, and updated by admins.
    // Leasing fields are only mutable by the backend (by not allowing clients to change them)
    match /jobs/{jobId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
    }

    // Job runs are read-only for admins
    match /jobs/{jobId}/runs/{runId} {
      allow read: if isAdmin();
    }
    
    // Public job data is readable by anyone
    match /jobPublic/{jobId} {
        allow read: if true;
    }

    // Applicants can be created by anyone, but only read/updated by admins.
    match /applicants/{applicantId} {
      allow read, update: if isAdmin();
      allow create: if true; // Validation should be done in the function
    }

    // Applications can be created by anyone, but only read/updated by admins.
    match /applications/{applicationId} {
      allow read, update: if isAdmin();
      allow create: if true; // Validation should be done in the function
    }
    
    // Waitlist can be written by anyone, but only read/updated by admins
    match /waitlist/{entryId} {
        allow read, update: if isAdmin();
        allow create: if true;
    }
    
    // Referrals can be managed by admins
    match /referrals/{refCode} {
        allow read, write: if isAdmin();
    }
    
    // Events can be created by anyone, but only read by admins.
    match /events/{eventId} {
        allow read: if isAdmin();
        allow create: if true;
    }

    // Metrics are admin-only
    match /jobMetrics/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
