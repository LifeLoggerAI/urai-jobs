rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Public read-only access to open jobs
    match /jobPublic/{jobId} {
      allow get: if true;
      allow list: if true;
    }

    // Allow anyone to create applications, applicants, and waitlist entries
    match /applicants/{applicantId} {
      allow create: if true;
    }

    match /applications/{applicationId} {
      allow create: if true;
    }

    match /waitlist/{waitlistId} {
      allow create: if true;
    }

    // Allow anyone to create events
    match /events/{eventId} {
      allow create: if true;
    }

    // Admins can do anything
    match /jobs/{jobId} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }

    match /referrals/{refCode} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }

    match /admins/{adminId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
