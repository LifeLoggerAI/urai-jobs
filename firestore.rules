rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.admin == true;
    }

    match /jobs/{jobId} {
      allow read, write: if isAdmin();
    }

    match /jobRuns/{runId} {
      allow read, write: if isAdmin();
    }

    match /jobTypes/{type} {
      allow read, write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
