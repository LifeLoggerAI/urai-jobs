rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAuth() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isAuth() && request.auth.uid == uid;
    }
 
    function getRole() {
      return request.auth.token.role;
    }

    function isRole(role) {
      return isAuth() && getRole() == role;
    }

    function isOneOfRoles(roles) {
      return isAuth() && getRole() in roles;
    }

    match /jobs/{jobId} {
      allow read: if true;
      allow write: if isOneOfRoles(['admin', 'recruiter']);
    }

    match /applications/{applicationId} {
      allow read, update: if isOneOfRoles(['admin', 'recruiter']);
      allow create: if isAuth();
    }

    match /companies/{companyId} {
      allow read: if true;
      allow write: if isOneOfRoles(['admin', 'recruiter']);
    }

    match /jobEvents/{eventId} {
      allow read, write: if isRole('admin');
    }

    match /webhooks/{webhookId} {
      allow read, write: if isRole('admin');
    }

    match /scheduledTasks/{taskId} {
      allow read, write: if isRole('admin');
    }
  }
}
