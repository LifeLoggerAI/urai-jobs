rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isRole(role) {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == role;
    }
    
    function hasOnly(keys) {
      return request.resource.data.keys().hasOnly(keys);
    }

    // PUBLIC: Job listings (read-only)
    match /jobPublic/{jobId} {
      allow get: if true;
      allow list: if true;
      allow write: if false;
    }

    // ADMIN: Job management
    match /jobs/{jobId} {
      allow read, write: if isAdmin();
      // TODO: Add field validation on write
    }

    // PUBLIC WRITE: Create applications
    match /applications/{applicationId} {
      allow create: if true; // TODO: Add validation for public creation
      allow read, update, delete: if isAdmin();

      // Anyone can create an application, but with strict validation
      // - must have required fields
      // - email must be lowercased
      // - resume info must be valid if present
    }

    // PUBLIC WRITE: Create applicants (or lookup)
    match /applicants/{applicantId} {
      allow create: if true; // TODO: Add validation for public creation
      allow read, update, delete: if isAdmin();
    }
    
    // PUBLIC WRITE: Join waitlist
    match /waitlist/{entryId} {
        allow create: if true; // TODO: Add validation for public creation
        allow read, update, delete: if isAdmin();
    }
    
    // PUBLIC WRITE: Track events
    match /events/{eventId} {
        allow create: if true; // TODO: Add validation for public creation
        allow read: if isAdmin();
        allow update, delete: if false;
    }

    // ADMIN: Referral code management
    match /referrals/{refCode} {
      allow read, write: if isAdmin();
    }

    // ADMIN: Admin role management (only owners can manage admins)
    match /admins/{uid} {
      allow read: if isAdmin();
      allow write: if isRole('owner');
      // Prevent non-owners from making themselves an owner
      // allow update: if isRole('owner') && request.resource.data.role != 'owner';
    }
    
    // Default deny all other collections
    match /{path=**} {
      allow read, write: if false;
    }
  }
}