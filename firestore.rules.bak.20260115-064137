rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isBackend() {
      return request.auth == null;
    }

    match /jobs/{jobId} {
      allow read, write: if isBackend();
    }

    match /jobEvents/{eventId} {
      allow read, write: if isBackend();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
