{
  "name": "urai-jobs",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "functions",
    "web"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:web\" \"npm:emulators\"",
    "dev:web": "npm run dev -w web",
    "emulators": "firebase emulators:start --import=./firebase-data --export-on-exit",
    "build": "npm run build -w web && npm run build -w functions",
    "deploy": "npm run build && firebase deploy --only hosting,functions",
    "lint": "npm run lint -ws --if-present",
    "test": "npm test -ws --if-present",
    "seed": "npm run seed -w functions"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "firebase-tools": "^13.8.0"
  }
}
