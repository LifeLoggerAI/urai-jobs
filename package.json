{
  "name": "urai-jobs",
  "private": true,
  "workspaces": [
    "functions",
    "web"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "build": "npm run build --workspace=web && npm run build --workspace=functions",
    "emulators": "firebase emulators:start",
    "lint": "npm run lint --workspace=functions && npm run lint --workspace=web",
    "test": "vitest",
    "smoke": "vitest run test/smoke.test.ts",
    "deploy": "firebase deploy",
    "seed": "ts-node scripts/seed.ts"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^4.0.17"
  }
}
