{
  "name": "urai-jobs",
  "private": true,
  "workspaces": [
    "functions",
    "web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run emulators\" \"npm run --workspace=web dev\"",
    "build": "npm run --workspace=web build && npm run --workspace=functions build",
    "emulators": "firebase emulators:start --import=./firebase-data --export-on-exit",
    "seed": "firebase emulators:exec --only firestore \"npm --workspace=functions run seed\"",
    "deploy": "firebase deploy --only functions,hosting",
    "lint": "npm run --workspace=functions lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
